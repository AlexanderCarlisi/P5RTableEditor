<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.p5rte.GUI.PartyEditorController">
    <top>
        <Button text="Back to Main Menu" onAction="#handleBackToMainMenu">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
        </Button>
    </top>
    <left>
        <VBox spacing="10">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
            <Label text="Party Members" />
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox fx:id="partyMemberContainer" spacing="5" />
            </ScrollPane>
        </VBox>
        <VBox spacing="7" fx:id="personaContainer" />
    </left>
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="PersonaName" fx:id="generalTab">
                    <fx:include source="PersonaEditorGeneral.fxml" />
                </Tab>
                <Tab text="Skills">
                    <fx:include source="PersonaEditorSkills.fxml" />
                </Tab>
                <Tab text="Affinities">
                    <fx:include source="PersonaEditorAffinity.fxml" />
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>