<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.p5rte.GUI.PersonaEditorController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <Button text="Back to Main Menu" onAction="#handleBackToMainMenu">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
        </Button>
    </top>
    <left>
        <VBox spacing="10">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
            <TextField fx:id="searchField" promptText="Search Personas" />
            <ScrollPane fx:id="catalogueScrollPane" fitToWidth="true" fitToHeight="true">
                <VBox fx:id="catalogueContainer" spacing="5" />
            </ScrollPane>
        </VBox>
    </left>
    <center>
        <VBox spacing="10">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
            <!-- Persona Name Label -->
            <Label text="Persona Name" fx:id="personaNameLabel" />
            
            <!-- Arcana Section -->
            <HBox spacing="10">
                <Label text="Arcana:" />
                <ComboBox fx:id="arcanaComboBox" />
            </HBox>
            
            <!-- Resistances Label -->
            <Label text="Resistances TBI" />
        </VBox>
    </center>
</BorderPane>